    "concurrently": "^5.3.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "express": "^4.17.1",
    "mongoose": "^5.10.12"
  },
  "devDependencies": {
    "eslint-config-prettier": "^7.2.0",
